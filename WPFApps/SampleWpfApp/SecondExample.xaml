        xmlns:local="clr-namespace:SampleWpfApp"
        mc:Ignorable="d"
        Title="SecondExample" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center">
        <Label HorizontalContentAlignment="Center" Content="Title of the App" FontSize="30pt"/>
